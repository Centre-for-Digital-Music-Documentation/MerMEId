<h:span xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xxf="http://orbeon.org/oxf/xml/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:m="http://www.music-encoding.org/ns/mei" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:dcm="http://www.kb.dk/dcm">
    
    <!-- global event handlers -->
    
    <xf:action ev:event="xxforms-value-changed" ev:observer="data-instance">
        <xf:setvalue ref="instance('temp')/changed" value="'true'"/>
        <xf:dispatch name="language-update" target="form-group"/>
    </xf:action>
    
    <xf:action ev:event="id-update">
        <!-- Check for duplicate IDs -->
        <xf:action while="instance('data-instance')//*[@xml:id = preceding-sibling::*/@xml:id]">
            <xf:setvalue ref="instance('data-instance')//*[@xml:id = preceding-sibling::*/@xml:id]/@xml:id" value="concat(name(..),'_',substring(digest(string(random(true)), 'MD5', 'hex'),1,8))"/>
            <xf:setvalue ref="xxf:instance('temp')/changed" value="'true'"/>
        </xf:action>
    </xf:action>
    
    <xf:action ev:event="language-update">
        <!-- add missing language declarations -->
        <xf:group ref=".[count(.=xxf:instance('data-instance')//m:langUsage/m:language/@xml:id) &gt; 0]">
            <xf:action while="xxf:instance('languages')/m:language[@xml:id=xxf:instance('data-instance')//@xml:lang[not(.=xxf:instance('data-instance')//m:langUsage/m:language/@xml:id)]]">
                <xf:insert context="xxf:instance('data-instance')/m:meiHead/m:workList/m:work/m:langUsage" origin="xxf:instance('languages')/m:language[@xml:id=xxf:instance('data-instance')//@xml:lang[not(.=xxf:instance('data-instance')//m:langUsage/m:language/@xml:id)]][1]"/>
            </xf:action>
            <!-- delete unused language declarations -->        
            <xf:action while="xxf:instance('data-instance')//m:langUsage/m:language[not(@xml:id=xxf:instance('data-instance')//@xml:lang)]">
                <xf:delete nodeset="xxf:instance('data-instance')//m:langUsage/m:language[not(@xml:id=xxf:instance('data-instance')//@xml:lang)]"/>
            </xf:action>
            <!-- delete duplicate language declarations -->
            <xf:action while="xxf:instance('data-instance')//m:langUsage/m:language[. = preceding-sibling::m:language]">
                <xf:delete nodeset="xxf:instance('data-instance')//m:langUsage/m:language[. = preceding-sibling::m:language]"/>
            </xf:action>
        </xf:group>
    </xf:action>    
    
</h:span>